{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Vecno Wallet",
  "version": "0.1.0",
  "identifier": "com.vecno.wallet",
  "build": {
    "beforeDevCommand": "trunk serve",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "trunk build --release",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Vecno Wallet",
        "width": 1200,
        "height": 800,
        "resizable": false,
        "fullscreen": false,
        "maximizable": false,
        "minWidth": 1000,
        "minHeight": 600,
        "decorations": false,
        "transparent": true,
        "center": true,
        "devtools": false
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self'",
        "script-src": "'self' 'wasm-unsafe-eval'",
        "style-src": "'self' 'unsafe-inline'",
        "img-src": "'self' data:",
        "connect-src": "'self'",
        "font-src": "'self' data:",
        "object-src": "'none'",
        "base-uri": "'self'",
        "frame-src": "'none'",
        "manifest-src": "'self'",
        "worker-src": "'self' blob:",
        "media-src": "'none'"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/favicon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "nsis": {
        "installerIcon": "icons/favicon.ico"
      }
    }
  },
  "plugins": {}
}