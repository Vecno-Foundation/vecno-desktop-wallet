{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Vecno Wallet",
  "version": "0.2.0",
  "identifier": "com.vecno.wallet",
  "build": {
    "beforeDevCommand": "trunk serve",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "trunk build --release",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Vecno Wallet",
        "width": 1200,
        "height": 800,
        "resizable": false,
        "fullscreen": false,
        "maximizable": false,
        "minWidth": 1000,
        "minHeight": 600,
        "decorations": false,
        "center": true,
        "devtools": false
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self'",
        "script-src": "'self' 'wasm-unsafe-eval'",
        "style-src": "'self' 'unsafe-inline'",
        "img-src": "'self' data: asset: http://asset.localhost",
        "connect-src": "'self' https://api.vecnoscan.org ipc: http://ipc.localhost https://ipc.localhost",
        "font-src": "'self' data:",
        "object-src": "'none'",
        "base-uri": "'self'",
        "frame-src": "'none'",
        "manifest-src": "'self'",
        "worker-src": "'self' blob:",
        "media-src": "'none'"
      }
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.png",
      "icons/favicon.ico"
    ],
    "longDescription": "Secure and modern wallet for the Vecno network",
    "shortDescription": "Vecno Wallet",
    "copyright": "Â© 2026 Vecno Foundation",
    "license": "MIT",
    "linux": {
      "deb": {
        "depends": [
          "libgtk-3-0",
          "libwebkit2gtk-4.1-0",
          "libappindicator3-1",
          "librsvg2-2"
        ]
      },
      "appimage": {}
    },
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "hardenedRuntime": true,
      "minimumSystemVersion": "10.15",
      "providerShortName": "Vecno Foundation"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "nsis": {
        "installerIcon": "icons/favicon.ico",
        "installMode": "currentUser",
        "languages": [
          "English"
        ]
      }
    }
  },
  "plugins": {}
}